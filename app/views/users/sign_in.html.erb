<div class="container device">
  <% if flash[:failure] %>
    <p class="failure"><%= flash[:failure] %></p>
  <% end %>
  <div class="device_frame">
    <%= render 'layouts/shared/error', obj: @user %>
    <p class="my-4">ログイン</p>
    <div class="device_inner">
      <%= form_tag("/users/login", {method: :post}) do %>
        <input type="hidden" name="authenticity_token" value="9hOJrKmwieKQbVzthTzIAhrez4ArCQhnXPZT3ijE7n4fzmXOZ9ypmJv8oNszqnWk/rCPcUYesTtKgLPtZlnj8A==">
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <input autocomplete="email" class="form-control col-10 px-2" placeholder="メールアドレス" type="email" name="user[email]" id="user_email" value="<%= @user.email %>">
        </div>
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <input autocomplete="current-password" class="form-control col-10 px-2" placeholder="パスワード" type="password" name="user[password]" id="user_password" value="<%= @user.password %>">
        </div>
        <div class="actions">
          <input type="submit" name="commit" value="ログイン" class="form-control btn-primary my-4 " data-disable-with="ログイン">
        </div>
       <% end %>   
      <p>
        <%= link_to("新しいアカウントを作成", "/users/sign_up") %>
      </p><br>
    </div>
  </div>
</div>