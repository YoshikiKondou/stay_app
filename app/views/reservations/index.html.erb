<div class="container-fiuld reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
    <table>
      <thead>
        <tr align="center">
          <th>ルーム画像</th>
            <th>ルーム名</th>
            <th>ルーム紹介</th>
            <th>合計料金</th>
            <th>開始日</th>
            <th>終了日</th>
            <th>予約確定日時</th>
          </tr>
      </thead>
      <tbody>
        <% @reservations.each do |reservation| %>
        <tr>
          
          <td>
            <%= link_to room_path(reservation.room.id) do %>
              <%= image_tag reservation.room.image_name.url, class: "reservations-image"  %>
            <% end %>
          </td>
          <td class="posts-name"><%= reservation.room.name %></td>
          <td class="posts-content"><%= reservation.room.introduction %></td>
          <td class="price-icon"><%= reservation.total_price %></td>
          <td><%= reservation.start_at.to_date %></td>
          <td><%= reservation.end_at.to_date %></td>
          <td><%= reservation.created_at %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>